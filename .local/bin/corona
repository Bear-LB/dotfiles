#!/bin/sh

[ "$(stat -c %y ~/.cache/corona | cut -d ' ' -f1 )" != "$(date '+%Y-%m-%d')" ] &&
	curl -s https://corona-stats.online/denmark > ~/.cache/corona

grep "Denmark" ~/.cache/corona |
	sed 's/\x1b\[[0-9;]*m//g' |
	sed "s/\s*//g ; s/â•‘//g ; s/â”‚/;/g" |
	awk -F';' '{print "ðŸ¤’" $3 " (" $4 ") ðŸ’€" $5 ""}'
	#awk '{for(i=NF;i>=1;i--) printf "%s ", $i;print ""}'

