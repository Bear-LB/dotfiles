#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e alsamixer & ;;
	2) amixer sset Master toggle ;;
	4) amixer sset Master 5%+ >/dev/null 2>/dev/null ;;
	5) amixer sset Master 5%- >/dev/null 2>/dev/null ;;
	3) pgrep -x dunst >/dev/null && notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

volstat="$(amixer get Master)"

echo "$volstat" | grep "\[off\]" >/dev/null && echo -e "ðŸ”‡ ï…‚ " && exit

vol=$(echo "$volstat" | grep -o "\[[0-9]\+%\]" | sed "s/[^0-9]*//g;1q")

if [ "$vol" -gt "70" ]; then
#echo -e "[6]ðŸ”Š $vol%[1] ï…‚ "
echo -e "ðŸ”Š $vol% ï…‚ "
elif [ "$vol" -lt "30" ]; then
echo -e "ðŸ”ˆ $vol% ï…‚ "
else
echo -e "ðŸ”‰ $vol% ï…‚ "
fi

