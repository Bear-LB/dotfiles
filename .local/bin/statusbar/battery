# Loop through all attached batteries.
for battery in /sys/class/power_supply/????
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity) || break
	status=$(sed "s/Discharging/ğŸ”‹/;s/Not charging/ğŸ›‘[4]/;s/Charging/ğŸ”Œ[6]/;s/Unknown/â™»ï¸ /;s/Full/âš¡[6]/" "$battery"/status)

	# If it is discharging and 25% or less, we will add a â— as a warning.
	[ "$capacity" -gt 49 ] && [ "$status" = "ğŸ”‹" ] && color="[6]"
	 [ "$capacity" -le 50 ] && [ "$capacity" -gt 25 ] && [ "$status" = "ğŸ”‹" ] && status="ï‰‚  " && color="[4]"
	 [ "$capacity" -le 26 ] && [ "$capacity" -gt 5 ] && [ "$status" = "ğŸ”‹" ] && status="ï‰ƒ  " && color="[9]â—"
	 [ "$capacity" -le 6 ] && [ "$status" = "ğŸ”‹" ] && status="ï‰„  " && color="[9]â—â—â—"

	echo "$status$color$capacity%[1] ï…‚ "
	unset warn
done
